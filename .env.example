# AWS SES Configuration
AWS_SES_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SES_FROM_EMAIL=noreply@swift-verify.org
AWS_SES_FROM_NAME=SwiftVerify
AWS_SES_CONFIG_SET=swiftverify-emails

# Unsubscribe Token Secret
# IMPORTANT: Change this in production to a secure random string
UNSUBSCRIBE_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_TO_SECURE_RANDOM_STRING

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/swiftverify
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=swiftverify
DATABASE_USER=user
DATABASE_PASSWORD=password

# Server Configuration
PORT=8080
ENVIRONMENT=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://swift-verify.org

# Rate Limiting (for unsubscribe endpoint)
RATE_LIMIT_UNSUBSCRIBE=10
RATE_LIMIT_WINDOW_MINUTES=1

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance

# Email Settings
EMAIL_RETRY_MAX=3
EMAIL_RETRY_DELAY_SECONDS=300

# Compliance
ENABLE_AUDIT_LOGGING=true
ENABLE_EMAIL_LOGGING=true
