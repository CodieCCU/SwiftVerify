# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swiftverify
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL_MODE=disable

# Equifax Work Number API Configuration
# Documentation: https://developer.equifax.com/
EQUIFAX_API_URL=https://api.equifax.com/business/trendeddata/v1
EQUIFAX_API_KEY=your_equifax_api_key_here
EQUIFAX_CLIENT_ID=your_client_id_here
EQUIFAX_CLIENT_SECRET=your_client_secret_here
EQUIFAX_TIMEOUT_SECONDS=30

# Equifax Environment (sandbox or production)
EQUIFAX_ENVIRONMENT=sandbox

# JWT Configuration (for API authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION_HOURS=24

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Request ID Configuration
ENABLE_REQUEST_ID=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
