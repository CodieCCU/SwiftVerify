# SwiftVerify Configuration Template
# Copy this file to .env and update with your values

# ============================================
# Backend Configuration
# ============================================

# Server Settings
USE_HTTPS=true
PORT=8080
TLS_CERT=./server.crt
TLS_KEY=./server.key

# Security
JWT_SECRET=change-this-to-a-very-long-random-secret-key-minimum-32-characters
MFA_ENABLED=true

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swiftverify
DB_USER=swiftverify_user
DB_PASSWORD=secure_database_password
DB_SSL_MODE=require

# Session Configuration
SESSION_TIMEOUT=900  # 15 minutes in seconds
MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true

# ============================================
# Frontend Configuration
# ============================================

# API Endpoint
VITE_API_URL=https://localhost:8080/api

# Features
VITE_ENABLE_MFA=true
VITE_ENABLE_DOCUMENT_UPLOAD=true
VITE_ENABLE_STAFF_ASSISTED=true
VITE_ENABLE_LOW_DEPOSIT_MODE=true

# ============================================
# Optional: External Services
# ============================================

# Email Service (for MFA codes)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@swiftverify.com
# SMTP_PASSWORD=your_email_password

# SMS Service (for MFA codes)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# File Storage (for document uploads)
# AWS_S3_BUCKET=swiftverify-documents
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-west-2

# ============================================
# Development Settings
# ============================================

# Set to 'development' for local dev, 'production' for deployment
NODE_ENV=development

# Debug mode (verbose logging)
DEBUG=false

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
