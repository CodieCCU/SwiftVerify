{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "@api_base_url",
    "VITE_AWS_SES_REGION": "@aws_ses_region",
    "VITE_EQUIFAX_API_URL": "@equifax_api_url"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
