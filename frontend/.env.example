# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api

# AWS SES Configuration (for email notifications)
# IMPORTANT: Never commit actual credentials to git. Use .env.local for development.
VITE_AWS_SES_REGION=us-east-1
VITE_AWS_ACCESS_KEY_ID=your_access_key_here
VITE_AWS_SECRET_ACCESS_KEY=your_secret_key_here
VITE_AWS_SES_FROM_EMAIL=noreply@swift-verify.org
VITE_AWS_SES_REPLY_TO=support@swift-verify.org

# Equifax API Configuration (placeholders)
VITE_EQUIFAX_WORK_NUMBER_API_URL=https://api.equifax.com/work-number
VITE_EQUIFAX_WORK_NUMBER_API_KEY=your_api_key_here
VITE_EQUIFAX_OMNI_API_URL=https://api.equifax.com/omni
VITE_EQUIFAX_OMNI_API_KEY=your_api_key_here

# JWT Configuration
VITE_JWT_SECRET=your_jwt_secret_here

# Database Configuration
VITE_DATABASE_URL=postgresql://user:password@localhost:5432/swiftverify

# Application Settings
VITE_APP_NAME=SwiftVerify
VITE_APP_URL=https://www.swift-verify.org
VITE_SUPPORT_EMAIL=support@swiftverify.com

# Feature Flags
VITE_ENABLE_MFA=false
VITE_ENABLE_BACKGROUND_CHECKS=true
